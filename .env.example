# Infra-Core Environment Variables
# Copy this file to .env and customize as needed

# Global settings
INFRA_CORE_DATA_DIR=/var/lib/infra-core
INFRA_CORE_LOG_LEVEL=info
INFRA_CORE_ENVIRONMENT=production

# Database
INFRA_CORE_DB_PATH=/var/lib/infra-core/infra-core.db

# Gate (reverse proxy)
INFRA_CORE_GATE_HTTP_PORT=80
INFRA_CORE_GATE_HTTPS_PORT=443
INFRA_CORE_ACME_EMAIL=admin@example.com
INFRA_CORE_ACME_STAGING=false

# Console API
INFRA_CORE_CONSOLE_PORT=8082
INFRA_CORE_JWT_SECRET=your-secret-key-here
INFRA_CORE_SESSION_KEY=your-session-key-here

# All Services Configuration (All Enabled by Default)
# All services will be installed and started automatically
ENABLE_ORCHESTRATOR=true
ENABLE_PROBE_MONITOR=true
ENABLE_SNAP_SERVICE=true

# Primary Port Configuration
ORCHESTRATOR_PORT=9090    # Container orchestration service
PROBE_PORT=8085          # Health monitoring and probe service  
SNAP_PORT=8086           # Backup/restore service

# Fallback Port Configuration (auto-used if primary ports conflict)
# The system will automatically try these if primary ports are occupied:
ORCHESTRATOR_FALLBACK_PORT=19090
PROBE_FALLBACK_PORT=18085
SNAP_FALLBACK_PORT=18086

# Additional fallback ports (secondary fallbacks)
ORCHESTRATOR_FALLBACK2_PORT=29090
PROBE_FALLBACK2_PORT=28085
SNAP_FALLBACK2_PORT=28086